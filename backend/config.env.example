# 钉钉K8s运维机器人配置示例
# 复制此文件为 .env 并填入真实配置

# LLM配置
LLM_ENABLED=true
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# 钉钉配置
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your_token_here
DINGTALK_SECRET=your_secret_here

# 系统配置
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Kubernetes配置 (可选)
KUBECONFIG_PATH=/path/to/kubeconfig
K8S_NAMESPACE=default
K8S_IN_CLUSTER=false
K8S_API_SERVER=https://kubernetes.default.svc
K8S_TOKEN=your_k8s_token_here
K8S_CA_CERT_PATH=/path/to/ca.crt

# K8s MCP服务器配置 (可选)
K8S_MCP_HOST=localhost
K8S_MCP_PORT=8766
K8S_MCP_DEBUG=false

# K8s安全配置 (可选)
K8S_AUDIT_ENABLED=true
K8S_ALLOWED_NAMESPACES=default
K8S_FORBIDDEN_NAMESPACES=kube-system,kube-public
K8S_MAX_RESOURCES=100

# MCP配置 (可选)
MCP_CONFIG_PATH=config/mcp_config.json
MCP_TOOLS_CONFIG_PATH=/path/to/mcp/tools/config 